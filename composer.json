{
    "name": "ivoba/money-twig-extension",
    "description": "Twig extension for moneyphp/money",
    "keywords": [
        "twig",
        "money"
    ],
    "homepage": "https://www.github.com/ivoba/money-twig-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivo Bathke",
            "email": "ivo.bathke@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.6",
        "moneyphp/money": "^3.1",
        "symfony/intl": ">=2.3",
        "twig/twig": "~1.20|~2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Ivoba\\Money\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ivoba\\Money\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
